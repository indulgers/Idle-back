{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/micro-system/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/micro-system/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/micro-system",
  "projects": {
    "main": {
      "type": "application",
      "root": "apps/main-server",
      "entryFile": "main",
      "sourceRoot": "apps/main-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main-server/tsconfig.app.json"
      }
    },
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    },
    "donate": {
      "type": "application",
      "root": "apps/donate",
      "entryFile": "main",
      "sourceRoot": "apps/donate/src",
      "compilerOptions": {
        "tsConfigPath": "apps/donate/tsconfig.app.json"
      }
    },
    "prisma": {
      "type": "library",
      "root": "libs/prisma",
      "entryFile": "index",
      "sourceRoot": "libs/prisma/src",
      "compilerOptions": {
        "tsConfigPath": "libs/prisma/tsconfig.lib.json"
      }
    },
    "product": {
      "type": "application",
      "root": "apps/product",
      "entryFile": "main",
      "sourceRoot": "apps/product/src",
      "compilerOptions": {
        "tsConfigPath": "apps/product/tsconfig.app.json"
      }
    }
  }
}